  body
    include ../includes/navbar.pug
    main(class='main' role='main' style="min-height: 400px;")
      h4.contact Prime Systems Contact Us
      form(action="#" method="POST" name="contact-form" onsubmit="sendMail()").contact-form.column.large-3.medium-6.small-12
        .formset
          span.input.input--madoka
            input(name="name" type="text" id="input-name" placeholder="Name").input__field.input__field--madoka
            label(for="input-name")
              svg(class="graphic graphic--madoka" width="100%" height="100%" viewBox="0 0 404 77" preserveAspectRatio="none")
                path(d="m0,0l404,0l0,77l-404,0l0,-77z")
          span.input.input--madoka
            input(name="email" type="text" id="input-email" placeholder="Email").input__field.input__field--madoka
            label(for="input-email")
              svg(class="graphic graphic--madoka" width="100%" height="100%" viewBox="0 0 404 77" preserveAspectRatio="none")
                path(d="m0,0l404,0l0,77l-404,0l0,-77z")
          span.input.input--madoka
            input(name="msg" id="input-msg" placeholder="Message").input__field.input__field--madoka
            label(for="input-msg")
              svg(class="graphic graphic--madoka" width="100%" height="100%" viewBox="0 0 404 77" preserveAspectRatio="none")
                path(d="m0,0l404,0l0,77l-404,0l0,-77z")
          button(type="button" onclick="sendMail()" class="contact button button--ujarak button--border-thin button--text-thick") Send
    script.
      (function() {
        // trim polyfill : https://developer.mozilla.org/en-US/docs/Web/JavaScript/Reference/Global_Objects/String/Trim
        if (!String.prototype.trim) {
          (function() {
            // Make sure we trim BOM and NBSP
            var rtrim = /^[\s\uFEFF\xA0]+|[\s\uFEFF\xA0]+$/g;
            String.prototype.trim = function() {
              return this.replace(rtrim, '');
            };
          })();
        }

        [].slice.call( document.querySelectorAll( 'input.input__field' ) ).forEach( function( inputEl ) {
          // in case the input is already filled..
          if( inputEl.value.trim() !== '' ) {
            classie.add( inputEl.parentNode, 'input--filled' );
          }

          // events:
          inputEl.addEventListener( 'focus', onInputFocus );
          inputEl.addEventListener( 'blur', onInputBlur );
        } );

        function onInputFocus( ev ) {
          classie.add( ev.target.parentNode, 'input--filled' );
        }

        function onInputBlur( ev ) {
          if( ev.target.value.trim() === '' ) {
            classie.remove( ev.target.parentNode, 'input--filled' );
          }
        }
      })();
  
